#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

/**
 * @var ClassLoader $loader
 */
$loader = require 'vendor/autoload.php';

$application = new Application();
$application->addCommands([
  new SiteFactoryAPI\Command\ListBackups(),
  new SiteFactoryAPI\Command\CreateBackup(),
  new SiteFactoryAPI\Command\CreateBackupBulk(),
  new SiteFactoryAPI\Command\DeleteBackup(),
  new SiteFactoryAPI\Command\ListSites(),
  new SiteFactoryAPI\Command\CreateSite(),
  new SiteFactoryAPI\Command\ListGroups(),
  new SiteFactoryAPI\Command\StatusTask(),
  new SiteFactoryAPI\Command\ListBackupTasks()
]);
$application->run();
